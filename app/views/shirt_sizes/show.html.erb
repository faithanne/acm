<% if user_signed_in? %>

  <p id="notice"><%= notice %></p>

  <p>
    <b>Size:</b>
    <%= @shirt_size.size %>
  </p>

  <%= link_to 'Edit', edit_shirt_size_path(@shirt_size) %> |
  <%= link_to 'Back', shirt_sizes_path %>

<% else %>

  <p>Please <%= link_to 'Sign In', new_user_session_path %>!</p>

<% end %>
