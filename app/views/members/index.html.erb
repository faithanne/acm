<h1>Listing members</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Phone</th>
    <th>Major</th>
    <th>Email</th>
    <th>Fees paid</th>
    <th>Campus resident</th>
    <th>Volunteer</th>
    <th>Position</th>
    <th>Referrer</th>
    <th>Recruiter</th>
    <th>Interests</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @members.each do |member| %>
  <tr>
    <td><%= member.name %></td>
    <td><%= member.phone %></td>
    <td><%= member.major %></td>
    <td><%= member.email %></td>
    <td><%= member.fees_paid %></td>
    <td><%= member.campus_resident %></td>
    <td><%= member.volunteer %></td>
    <td><%= member.position %></td>
    <td><%= member.referrer %></td>
    <td><%= member.recruiter_id %></td>
    <td><%= member.interests %></td>
    <td><%= link_to 'Show', member %></td>
    <td><%= link_to 'Edit', edit_member_path(member) %></td>
    <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

