<%= simple_form_for(@member, html: { class: 'form-horizontal' }) do |f| %>

  <%= f.input :name %>
  <%= f.input :phone %>
  <%= f.input :major %>
  <%= f.input :email %>

  <% if user_signed_in? %>
    <%= f.input :fees_paid %>
    <%= f.input :graduate, label_method: 'Have you graduated?' %>
  <% end %>

  <%= f.association :shirt_size, label_method: :size, value_method: :id %>
  <%= f.input :campus_resident %>
  <%= f.input :volunteer, label: 'Interested in Volunteering?' %>
  <%= f.association :position %>
  <%= f.association :recruiter, label: 'Did one of these awesome people recruit you?' %>
  <%= f.input :interests %>
  <%= f.button :submit %>

<% end %>
