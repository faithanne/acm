<%= simple_form_for(@member, html: { class: 'form-horizontal' }) do |f| %>

  <%= f.input :name %>
  <%= f.input :phone %>
  <%= f.input :major %>
  <%= f.input :email %>
  <%= f.input :fees_paid %>
  <%= f.association :shirt_size, label_method: :size, value_method: :id %>
  <%= f.input :campus_resident %>
  <%= f.input :volunteer %>
  <%= f.association :position %>
  <%= f.input :referrer %>
  <%= f.association :recruiter %>
  <%= f.input :interests %>
  <%= f.button :submit %>

<% end %>
