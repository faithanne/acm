<div class="navbar navbar-inverse">
  <div class="navbar-inner">

    <%= link_to 'ACM Registrar', root_url, class: 'brand' %>

    <ul class="nav">
      <li><%= link_to 'Member Sign-Up', new_member_path %></li>
      <% if user_signed_in? %>
        <li><%= link_to 'Member List', members_path %></li>
      <% end %>
    </ul>

    <% if !user_signed_in? %>
      <ul class="nav pull-right">
        <li>
          <%= link_to 'Sign In', new_user_session_path %>
        </li>
      </ul>
    <% else %>
      <div class= pull-right">
        <ul class="nav pull-right">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Hello, <%= current_user.name %>!
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to edit_user_registration_path do %>
                  Edit User Info
              <% end %></li>
              <li><%= link_to destroy_user_session_path, method: :delete, data: { confirm: 'Are you sure?' } do %>
                  Sign Out
              <% end %></li>
            </ul>
          </li>
        </ul>
      </div>
    <% end %>

  </div>
</div>
